{
  "name": "@open-legal-tech/design-system",
  "version": "0.20.12",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "publishConfig": {
    "main": "./lib/index.cjs",
    "module": "./lib/index.mjs",
    "typings": "./lib/index.d.ts",
    "exports": {
      ".": {
        "import": "./lib/index.mjs",
        "require": "./lib/index.cjs",
        "types": "./lib/index.d.ts"
      }
    }
  },
  "files": [
    "/lib",
    "/src"
  ],
  "description": "The open legal tech design system",
  "sideEffects": false,
  "scripts": {
    "build:icons": "svgr ./src/icons/svgs -d ./src/icons/ --replace-attr-values '#2329D6=currentcolor' --typescript --no-dimensions --svg-props 'width=1.1em','height=1.1em' --ignore-existing",
    "build": "rm -rf lib && vite build && pnpm tsc -p tsconfig.build.json",
    "prepublishOnly": "pnpm build",
    "prettier": "prettier --check src/",
    "prettier:fix": "prettier --write src/",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "verify": "run-p prettier lint",
    "verify:fix": "yarn prettier:fix && yarn lint:fix"
  },
  "dependencies": {
    "@radix-ui/colors": "^0.1.7",
    "@radix-ui/react-accessible-icon": "^0.1.0",
    "@radix-ui/react-checkbox": "^0.1.0",
    "@radix-ui/react-collapsible": "^0.1.0",
    "@radix-ui/react-context-menu": "^0.1.1",
    "@radix-ui/react-dialog": "^0.1.1",
    "@radix-ui/react-dropdown-menu": "^0.1.1",
    "@radix-ui/react-popover": "^0.1.1",
    "@radix-ui/react-radio-group": "^0.1.0",
    "@radix-ui/react-slot": "^0.1.1",
    "@radix-ui/react-toggle": "^0.1.1",
    "@radix-ui/react-toggle-group": "^0.1.1",
    "@radix-ui/react-tooltip": "^0.1.1",
    "@stitches/react": "^1.2.5",
    "downshift": "^6.1.7",
    "match-sorter": "^6.3.1",
    "react-feather": "^2.0.9",
    "react-use": "^17.3.1",
    "stitches-normalize-css": "^1.2.0"
  },
  "peerDependencies": {
    "@fontsource/poppins": "^4.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remeda": "^0.0.30"
  },
  "devDependencies": {
    "@fontsource/poppins": "^4.5.0",
    "@svgr/cli": "^5.5.0",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "cross-env": "^7.0.3",
    "glob": "^7.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "remeda": "^0.0.30",
    "tsup": "^5.6.0",
    "typescript": "^4.4.4",
    "utility-types": "^3.10.0",
    "vite": "^2.6.13"
  }
}
