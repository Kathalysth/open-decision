{
  "name": "@open-decision/design-system",
  "version": "0.25.0",
  "main": "./lib/index.cjs",
  "module": "./lib/index.mjs",
  "types": "./src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.cjs",
      "types": "./src/index.ts"
    }
  },
  "publishConfig": {
    "main": "./lib/index.cjs",
    "module": "./lib/index.mjs",
    "types": "./lib/index.d.ts",
    "exports": {
      ".": {
        "import": "./lib/index.mjs",
        "require": "./lib/index.cjs",
        "types": "./lib/index.d.ts"
      }
    }
  },
  "files": [
    "/lib",
    "/src"
  ],
  "description": "The open legal tech design system",
  "sideEffects": false,
  "scripts": {
    "build:icons": "svgr ./src/icons/svgs -d ./src/icons/ --replace-attr-values '#2329D6=currentcolor' --typescript --no-dimensions --svg-props 'width=1.1em','height=1.1em' --ignore-existing",
    "build": "rm -rf lib && vite build && pnpm tsc -p tsconfig.build.json",
    "dev": "tsc --composite false --incremental false -p tsconfig.build.json & vite build --watch",
    "prepublishOnly": "pnpm build",
    "prettier": "prettier --check src/",
    "prettier:fix": "prettier --write src/",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "yarn lint --fix",
    "verify": "run-p prettier lint",
    "verify:fix": "yarn prettier:fix && yarn lint:fix"
  },
  "dependencies": {
    "@hookform/error-message": "^2.0.0",
    "@radix-ui/colors": "^0.1.7",
    "@radix-ui/react-accessible-icon": "^0.1.4",
    "@radix-ui/react-checkbox": "^0.1.5",
    "@radix-ui/react-collapsible": "^0.1.6",
    "@radix-ui/react-context-menu": "^0.1.6",
    "@radix-ui/react-dialog": "^0.1.7",
    "@radix-ui/react-dropdown-menu": "^0.1.6",
    "@radix-ui/react-hover-card": "^0.1.5",
    "@radix-ui/react-popover": "^0.1.6",
    "@radix-ui/react-radio-group": "^0.1.5",
    "@radix-ui/react-slot": "^0.1.1",
    "@radix-ui/react-tabs": "^0.1.5",
    "@radix-ui/react-toggle": "^0.1.4",
    "@radix-ui/react-toggle-group": "^0.1.5",
    "@radix-ui/react-tooltip": "^0.1.7",
    "@stitches/react": "^1.2.7",
    "downshift": "^6.1.7",
    "match-sorter": "^6.3.1",
    "react-feather": "^2.0.9",
    "react-hook-form": "^7.28.0",
    "react-use": "^17.3.1",
    "remeda": "^0.0.32",
    "spinners-react": "^1.0.6",
    "stitches-normalize-css": "^1.2.0",
    "use-resize-observer": "^8.0.0"
  },
  "peerDependencies": {
    "@fontsource/poppins": "^4.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@fontsource/poppins": "^4.5.3",
    "@svgr/cli": "^6.2.1",
    "@types/react": "^17.0.40",
    "@types/react-dom": "^17.0.13",
    "@vitejs/plugin-react": "^1.2.0",
    "cross-env": "^7.0.3",
    "glob": "^7.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tsup": "^5.12.1",
    "utility-types": "^3.10.0",
    "vite": "^2.8.6"
  }
}
