{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components": ["src/components/index"],
      "features": ["src/features/index"],
      "utils": ["src/utils/index"],
      "internalTypes": ["src/types/index"],
      "internalTypes/*": ["src/types/*"],
      "components/*": ["src/components/*"],
      "features/*": ["src/features/*"],
      "utils/*": ["src/utils/*"]
    },
    "incremental": true,
    "allowJs": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "composite": false,
    "declaration": false
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../design-system" },
    { "path": "../type-classes" },
    { "path": "../interpreter" }
  ]
}
