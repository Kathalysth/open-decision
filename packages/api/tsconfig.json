{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2018", "esnext.asynciterable", "dom.iterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    // "typeRoots": ["./src/types", "./node_modules/@types"],
