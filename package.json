{
  "name": "@open-legal-tech/design-system",
  "version": "0.8.0",
  "types": "./lib/index.d.ts",
  "exports": {
    "./icons": {
      "import": "./lib/icons.mjs",
      "require": "./lib/icons.js"
    },
    "./tokens": {
      "import": "./lib/internal/tokens.mjs",
      "require": "./lib/internal/tokens.js"
    },
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js"
    }
  },
  "files": [
    "/lib",
    "/src"
  ],
  "publishConfig": {
    "access": "public"
  },
  "description": "The open legal tech design system",
  "sideEffects": false,
  "scripts": {
    "build:esm": "cross-env BABEL_ENV=esmUnbundled babel -w src --extensions '.ts,.tsx' --out-dir 'dist/esm' --source-maps",
    "build:cjs": "cross-env BABEL_ENV=cjs babel -w src --extensions '.ts,.tsx' --out-dir 'dist/cjs' --source-maps",
    "build:types": "tsc -w --outDir ./dist/types",
    "build:icons": "svgr ./src/assets/icons/svgs -d ./src/assets/icons/ --replace-attr-values '#2329D6=currentcolor' --typescript --no-dimensions --svg-props 'width=1.1em','height=1.1em' --ignore-existing",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "rm -rf lib && rollup -c",
    "prepublish": "yarn build"
  },
  "dependencies": {},
  "peerDependencies": {
    "react-feather": "^2.0.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "react-feather": "^2.0.9",
    "@next/bundle-analyzer": "^11.1.2",
    "@rollup/plugin-commonjs": "^21.0.0",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@storybook/addon-a11y": "^6.3.10",
    "@storybook/addon-actions": "^6.3.10",
    "@storybook/addon-docs": "^6.3.10",
    "@storybook/addon-essentials": "^6.3.10",
    "@storybook/addon-links": "^6.3.10",
    "@storybook/addon-storysource": "^6.3.10",
    "@storybook/react": "^6.3.10",
    "@svgr/cli": "^5.5.0",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "@types/tailwindcss": "^2.2.1",
    "cross-env": "^7.0.3",
    "glob": "^7.1.7",
    "postcss": "^8.3.6",
    "postcss-import": "^14.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-rename": "^1.0.1",
    "rollup-plugin-rename-node-modules": "^1.2.0",
    "storybook-dark-mode": "^1.0.8",
    "tailwindcss": "^2.2.16"
  }
}
